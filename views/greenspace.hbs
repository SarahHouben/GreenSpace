<div class="search-container">



  <h2>Visit {{greenspace.name}} </h2>


  <div>
    <h3>Tags for {{greenspace.name}}</h3>
    <ul>
      {{#each greenspace.tags}}
      <li>
        {{ this }}
      </li>
      {{/each}}
    </ul>
  </div>

  <div>
    <h3>Gallery</h3>
    <div class="gallery-images">
      {{#each images}}
      <img class="greenspace-image" src="{{ this.image }}" alt="GreenSpace Image">
      {{/each}}



    </div>

    {{#if user._id}}
    <div class="gallery-button">
      <button id="upload_greenspace_widget" class="cloudinary-button">Add an Image</button>
    </div>
    {{/if}}

  </div>


  <div>
    <h3>Comments</h3>

    <div class="comment-list">
      <ul class="comment-item">
        {{#each comments}}
        <li class="comment-item"> {{ this.comment }}</li>
        {{!-- <img class="user-image-comment" src="{{../user.image}}" alt="User profile"> --}}
        <img class="user-image-comment" src="{{this.creator.image}}" alt="User profile">
        {{/each}}
      </ul>
    </div>



    {{#if user._id}}
    <form action="/greenspace/{{greenspace._id}}" method="POST">
      <input type="text" name="comment" id="comment" placeholder="Add your comment">
      <div class="comment-error"></div>
      <button id="add-comment" onclick="commentFormCheck(event)">Add a Comment</button>
    </form>
    {{/if}}



  </div>






  <button class="profile-button"><a target="_blank" href="https://www.google.com/maps/dir/?api=1&origin=&destination={{greenspace.location.lat}},{{greenspace.location.lng}}&travelmode=walking">NAVIGATE TO {{greenspace.name}}</a> </button>



  <button class="profile-button"><a href="/">Search for another GreenSpace</a></button>

  {{#with user}}

  {{!-- <form action='/search' method="post">
    <button class="favourite-button"><a href="/search/favourites/:id">Favorites</a></button>
  </form> --}}

  <button class="profile-button"><a href="/greenspace/new">Add another GreenSpace</a></button>

  {{/with}}









  <div>

    {{#if user._id}}
    <form>
      <input type="hidden" name="favourit" id="favourit" value="{{greenspace._id}}">
      <label class="favourite-added" for="star-favourite">Save to Favourites</label>
      <button id="star-favourite" onclick="sendId(event)"> <img src="/images/star_golden.png"
          alt="Star Favourite"></button>
    </form>

    {{!-- <div class="favourite-added"></div> --}}

    {{/if}}

  </div>

</div>



